{
    "mqtt-configuration": {
        "server": "mqtt",
        "port": 1883,
        "qos": 0

    },
    "modbus-configuration" : {
        "name" : "SDM530",
        "connection" : {
            "type" : "RTU",
            "port" : "/dev/cuaU2",
            "speed" : 19200,
            "parity" : "N",
            "bits" : 8,
            "stopbits" : 1,
            "slave" : 1,
            "debug" : false
        },
        "registers": [
            {
                "attr" : "GridVoltage",
                "description" :  "Grid Voltage",
                "mqtt-publish" : "house/solax",
                "modbus-address" : 0,
                "modbus-regcnt" : 1,
                "factor" : 0.1,
                "unit" : "A",
                "poll" : 5000
            },
            {
                "attr" : "feedin_power",
                "description" :  "Power obtained",
                "mqtt-publish" : "house/solax",
                "modbus-address" : 70,
                "modbus-regcnt" : 2,
                "modbus-signed" : true,
                "factor" : 1.0,
                "unit" : "C",
                "poll" : 5000
            },
            {
                "attr" : "GridPower",
                "description" :  "Grid Power",
                "mqtt-publish" : "house/solax",
                "modbus-address" : 2,
                "modbus-regcnt" : 1,
                "modbus-signed" : false,
                "factor" : 1.0,
                "unit" : "W",
                "poll" : 5000
            },
            {
                "attr" : "consum_energy_today",
                "description" :  "Feeding Energy Today",
                "mqtt-publish" : "house/solax",
                "modbus-address" : 154,
                "modbus-regcnt" : 2,
                "modbus-signed" : false,
                "factor" : 0.01,
                "unit" : "kW",
                "poll" : 5000
            }
        ]
    }
}
